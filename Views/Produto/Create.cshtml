@model Produto

<h2 class="text-center">üì¶ Adicionar Produto</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <form id="produtoForm" method="post">
                        <div class="mb-3">
                            <label for="DscProduto" class="form-label">Descri√ß√£o:</label>
                            <input type="text" id="DscProduto" name="DscProduto" class="form-control" required>
                            <div class="invalid-feedback">A descri√ß√£o √© obrigat√≥ria.</div>
                        </div>

                        <div class="mb-3">
                            <label for="VlrUnitario" class="form-label">Valor Unit√°rio:</label>
                            <input type="number" id="VlrUnitario" name="VlrUnitario" class="form-control" min="0.01" step="0.01" required>
                            <div class="invalid-feedback">O valor unit√°rio deve ser maior que 0.</div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">üíæ Salvar</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary w-100 mt-2">‚ùå Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $("#produtoForm").submit(function (event) {
            let isValid = true;

    
            let descricao = $("#DscProduto").val().trim();
            if (descricao === "") {
                $("#DscProduto").addClass("is-invalid");
                isValid = false;
            } else {
                $("#DscProduto").removeClass("is-invalid");
            }

         
            let valor = parseFloat($("#VlrUnitario").val());
            if (isNaN(valor) || valor <= 0) {
                $("#VlrUnitario").addClass("is-invalid");
                isValid = false;
            } else {
                $("#VlrUnitario").removeClass("is-invalid");
            }

            if (!isValid) {
                event.preventDefault(); 
            }
        });
    });
</script>


