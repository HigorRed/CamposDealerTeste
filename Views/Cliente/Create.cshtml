        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        border-radius: 5px;
    }

    .btn {
        font-size: 16px;
        padding: 10px;
        border-radius: 5px;
    }
</style>
