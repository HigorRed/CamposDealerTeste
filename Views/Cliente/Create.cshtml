@model Cliente

<h2 class="text-center">üë§ Adicionar Cliente</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <form id="clienteForm" method="post">
                        <div class="mb-3">
                            <label for="NmCliente" class="form-label">Nome:</label>
                            <input type="text" id="NmCliente" name="NmCliente" class="form-control" required>
                            <div class="invalid-feedback">O nome √© obrigat√≥rio.</div>
                        </div>

                        <div class="mb-3">
                            <label for="Cidade" class="form-label">Cidade:</label>
                            <input type="text" id="Cidade" name="Cidade" class="form-control" required>
                            <div class="invalid-feedback">A cidade √© obrigat√≥ria.</div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">üíæ Salvar</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary w-100 mt-2">‚ùå Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $("#clienteForm").submit(function (event) {
            let isValid = true;

       
            let nome = $("#NmCliente").val().trim();
            if (nome === "") {
                $("#NmCliente").addClass("is-invalid");
                isValid = false;
            } else {
                $("#NmCliente").removeClass("is-invalid");
            }

            let cidade = $("#Cidade").val().trim();
            if (cidade === "") {
                $("#Cidade").addClass("is-invalid");
                isValid = false;
            } else {
                $("#Cidade").removeClass("is-invalid");
            }

            if (!isValid) {
                event.preventDefault(); 
            }
        });
    });
</script>


