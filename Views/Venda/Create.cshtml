@model Venda

<h2 class="text-center">üõí Adicionar Venda</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <form id="vendaForm" method="post">
                        <div class="mb-3">
                            <label for="IdCliente" class="form-label">Cliente:</label>
                            <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.Clientes"></select>
                        </div>

                        <div class="mb-3">
                            <label for="IdProduto" class="form-label">Produto:</label>
                            <select asp-for="IdProduto" class="form-control" asp-items="ViewBag.Produtos"></select>
                        </div>

                        <div class="mb-3">
                            <label for="QtdVenda" class="form-label">Quantidade:</label>
                            <input type="number" id="QtdVenda" name="QtdVenda" class="form-control" min="1" required oninput="calcularTotal()">
                        </div>

                        <div class="mb-3">
                            <label for="VlrUnitarioVenda" class="form-label">Valor Unit√°rio:</label>
                            <input type="number" id="VlrUnitarioVenda" name="VlrUnitarioVenda" class="form-control" min="0.01" step="0.01" required oninput="calcularTotal()">
                        </div>

                        <div class="mb-3">
                            <label for="VlrTotalVenda" class="form-label">Valor Total:</label>
                            <input type="text" id="VlrTotalVenda" class="form-control" value="0.00" readonly>
                        </div>

                        <div class="mb-3">
                            <label for="DthVenda" class="form-label">Data da Venda:</label>
                            <input type="date" id="DthVenda" name="DthVenda" class="form-control" required>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">üíæ Salvar</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary w-100 mt-2">‚ùå Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function calcularTotal() {
        let qtd = document.getElementById("QtdVenda").value;
        let vlrUnitario = document.getElementById("VlrUnitarioVenda").value;
        let vlrTotal = document.getElementById("VlrTotalVenda");

        let total = (qtd * vlrUnitario).toFixed(2);
        vlrTotal.value = isNaN(total) ? "0.00" : total;
    }
</script>
