@model List<Venda>

<h2 class="text-center">üõí Lista de Vendas</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">‚ûï Adicionar Venda</a>
</p>

<!-- üîç Campo de Filtro -->
<div class="mb-3">
    <input type="text" id="searchInput" class="form-control" placeholder="üîé Buscar por Cliente ou Produto..." onkeyup="filterTable()">
</div>

<table class="table table-striped table-bordered" id="vendaTable">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Valor Unit√°rio</th>
            <th>Valor Total</th>
            <th>Data da Venda</th>
            <th>A√ß√µes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venda in Model)
        {
            <tr>
                <td>@venda.IdVenda</td>
                <td class="cliente">@venda.Cliente.NmCliente</td>
                <td class="produto">@venda.Produto.DscProduto</td>
                <td>@venda.QtdVenda</td>
                <td>@String.Format("{0:C}", venda.VlrUnitarioVenda)</td>
                <td>@String.Format("{0:C}", venda.VlrTotalVenda)</td>
                <td>@venda.DthVenda.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = venda.IdVenda })" class="btn btn-warning btn-sm">‚úè Editar</a>
                    <a href="@Url.Action("Delete", new { id = venda.IdVenda })" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir esta venda?')">üóë Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    function filterTable() {
        var input, filter, table, tr, tdCliente, tdProduto, i, txtValueCliente, txtValueProduto;
        input = document.getElementById("searchInput");
        filter = input.value.toUpperCase();
        table = document.getElementById("vendaTable");
        tr = table.getElementsByTagName("tr");

        for (i = 1; i < tr.length; i++) {
            tdCliente = tr[i].getElementsByClassName("cliente")[0];
            tdProduto = tr[i].getElementsByClassName("produto")[0];

            if (tdCliente && tdProduto) {
                txtValueCliente = tdCliente.textContent || tdCliente.innerText;
                txtValueProduto = tdProduto.textContent || tdProduto.innerText;

                if (txtValueCliente.toUpperCase().indexOf(filter) > -1 || txtValueProduto.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }
</script>


<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    .table {
        width: 100%;
        text-align: center;
        border-collapse: collapse;
    }

    .table th, .table td {
        padding: 10px;
        border: 1px solid #ddd;
    }

    .table-dark th {
        background-color: #343a40;
        color: white;
    }

    .btn {
        padding: 5px 10px;
        text-decoration: none;
        border-radius: 4px;
        font-size: 14px;
    }

    .btn-primary { background-color: #007bff; color: white; }
    .btn-warning { background-color: #ffc107; color: black; }
    .btn-danger { background-color: #dc3545; color: white; }
    
    .btn:hover {
        opacity: 0.8;
    }

    .form-control {
        width: 50%;
        margin: 0 auto;
        padding: 8px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }
</style>
